<div
  id="contacto"
  class="container mx-auto px-4 py-8 md:flex md:justify-center md:items-center md:h-screen"
>
  <!-- Formulario -->
  <div
    class="md:w-3/4 md:mr-4 bg-white rounded-lg shadow-md overflow-hidden mb-8 md:mb-0"
  >
    <form class="p-6 space-y-6" action="#" method="POST">
      <div>
        <label for="name" class="block text-gray-700">Nombre</label>
        <input
          type="text"
          id="name"
          name="name"
          class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          placeholder="Ingrese su nombre"
        />
      </div>
      <div>
        <label for="email" class="block text-gray-700">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          placeholder="Ingrese su correo electrónico"
        />
      </div>
      <div>
        <label for="message" class="block text-gray-700">Mensaje</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          placeholder="Ingrese su mensaje"></textarea>
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
          >Enviar</button
        >
      </div>
    </form>
  </div>
  <!-- Información de contacto -->
  <div
    class="md:w-1/4 md:ml-4 bg-gray-200 flex flex-col justify-center items-center p-6"
  >
    <h2 class="text-xl font-semibold mb-4">Información de contacto</h2>
    <img
      src="https://media.istockphoto.com/id/1513334216/es/foto/icono-de-ubicaci%C3%B3n-de-pin-3d-en-el-mapa-seguimiento-de-pedidos-en-l%C3%ADnea-marca-de-ubicaci%C3%B3n-en.jpg?b=1&s=612x612&w=0&k=20&c=_XOecVRcgPMES-y-_ImuLAf15bplbnWGcUVopICfMpo="
      alt="Logo"
      class="mb-4"
    />
    <p class="text-gray-700 mb-2">Dirección: Av.Patria, Quito, Ecuador</p>
    <p class="text-gray-700 mb-2">Teléfono: +593 456789</p>
    <p class="text-gray-700">Email: gym@info.com</p>
  </div>
</div>
